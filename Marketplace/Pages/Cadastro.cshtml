@page
@model Marketplace.Pages.CadastroModel
@using Marketplace.Models.Model
@using Marketplace.Model
@{
    ViewData["Title"] = "Cadastro";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <title>Cadastro</title>
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="mb-4">Cadastro</h2>

                <!-- Escolha do tipo de cadastro -->
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipoCadastro" id="clienteRadio" value="cliente" checked>
                    <label class="form-check-label" for="clienteRadio">
                        Cliente
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipoCadastro" id="vendedorRadio" value="vendedor">
                    <label class="form-check-label" for="vendedorRadio">
                        Vendedor
                    </label>
                </div>

                <!-- Formulário do Cliente -->
                <form id="clienteForm" class="mt-4">
                    <div class="form-group">
                        <label for="clienteNome">Nome</label>
                        <input type="text" class="form-control" id="clienteNome" placeholder="Digite seu nome">
                    </div>
                    <div class="form-group">
                        <label for="clienteCpf">CPF</label>
                        <input type="text" class="form-control" id="clienteCpf" placeholder="Digite seu CPF">
                    </div>
                    <div class="form-group">
                        <label for="clienteEmail">Email</label>
                        <input type="email" class="form-control" id="clienteEmail" placeholder="Digite seu email">
                    </div>
                    <!-- Adicione outros campos se necessário -->

                    <button type="submit" class="btn btn-primary">Cadastrar Cliente</button>

                    <!-- Link para a página de login -->
                    <p class="mt-3">Já é cadastrado? <a href="/Login">Faça login aqui</a></p>
                </form>

                <!-- Formulário do Vendedor -->
                <form id="vendedorForm" class="mt-4" style="display: none;">
                    <div class="form-group">
                        <label for="vendedorRazaoSocial">Razão Social</label>
                        <input type="text" class="form-control" id="vendedorRazaoSocial" placeholder="Digite a razão social">
                    </div>
                    <div class="form-group">
                        <label for="vendedorNomeFantasia">Nome Fantasia</label>
                        <input type="text" class="form-control" id="vendedorNomeFantasia" placeholder="Digite o nome fantasia">
                    </div>
                    <div class="form-group">
                        <label for="vendedorEmail">Email</label>
                        <input type="email" class="form-control" id="vendedorEmail" placeholder="Digite o email">
                    </div>
                    <!-- Adicione outros campos se necessário -->

                    <button type="submit" class="btn btn-primary">Cadastrar Vendedor</button>

                    <!-- Link para a página de login -->
                    <p class="mt-3">Já é cadastrado? <a href="/Login">Faça login aqui</a></p>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        // Alternar entre os formulários com base na escolha do tipo de cadastro
        $('input[name="tipoCadastro"]').change(function () {
            if (this.value === 'cliente') {
                $('#clienteForm').show();
                $('#vendedorForm').hide();
            } else if (this.value === 'vendedor') {
                $('#clienteForm').hide();
                $('#vendedorForm').show();
            }
        });
    </script>

</body>
</html>
