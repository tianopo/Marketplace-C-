@page
@model Marketplace.Models.Model.CarrinhoModel
@using Marketplace.Models.Model
@{
    ViewData["Title"] = "Carrinho";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <h1 class="display-4 text-center">Carrinho</h1>
        <div class="row mt-3">
            <div class="col-md-12">
                <h2>Resumo do Pedido</h2>
                <p><strong>Data do Pedido:</strong> 25/11/2023 </p>
                <p><strong>Valor Total:</strong> R$ 2000,00 </p>
                <p><strong>Status do Pedido:</strong> À pagar</p>
                <p><strong>Produto:</strong> Celular</p>
                <button type="button" class="btn btn-danger mb-1" onclick="retirarDoCarrinho()">Retirar do Carrinho</button>
            </div>
        </div>
            </div>

            <!-- Detalhes do Pagamento e Endereço -->
            <div class="col-md-6">
                <h2>Detalhes do Pagamento e Endereço</h2>

                <!-- Formulário para Detalhes do Pagamento -->
                <form>
                    <div class="form-group">
                        <label for="numeroCartao">Número do Cartão:</label>
                        <input type="text" class="form-control" id="numeroCartao" placeholder="1234 5678 9012 3456">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="validadeCartao">Validade:</label>
                            <input type="text" class="form-control" id="validadeCartao" placeholder="MM/AA">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cvvCartao">CVV:</label>
                            <input type="text" class="form-control" id="cvvCartao" placeholder="123">
                        </div>
                    </div>

                    <!-- Adicione mais campos para detalhes de pagamento conforme necessário -->

                    <hr>

                    <!-- Formulário para Detalhes do Endereço -->
                    <h4>Endereço de Entrega</h4>

                    <div class="form-group">
                        <label for="logradouro">Logradouro:</label>
                        <input type="text" class="form-control" id="logradouro" placeholder="Rua Marc">
                    </div>
                    <div class="form-group">
                        <label for="numero">Número:</label>
                        <input type="text" class="form-control" id="numero" placeholder="100">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="cidade">Cidade:</label>
                            <input type="text" class="form-control" id="cidade" placeholder="São José dos Campos">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="estado">Estado:</label>
                            <input type="text" class="form-control" id="estado" placeholder="São Paulo">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="cep">CEP:</label>
                            <input type="text" class="form-control" id="cep" placeholder="XX.XXX-XXX">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="complemento">Complemento:</label>
                            <input type="text" class="form-control" id="complemento" placeholder="Bl 10 Apto 207">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Finalizar Pagamento</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

